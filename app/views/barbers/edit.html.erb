<!-- Edit Page -->
<div class="text-center">
<h1>EDIT PROFILE</h1>
<span class="glyphicon glyphicon-edit imageict"></span>
</div>
<!-- <div class="container">
    <div class="vertical-center-row">
        <div align="center"></div> -->
  <div class="edit">

    <%= form_for @barber do |f| %>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
        <%= f.text_field :name, placeholder: "Change Name", :class => "form-control" %>
      </div>

      <div class="input-group">
        <div class="input-group-addon" id="at-symbol-glyph">@</div>
        <%= f.email_field :email, placeholder: "Update E-mail Address", class: "form-control" %><br />
      </div>

      <div class="input-group">
        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
        <%= f.password_field :password, placeholder: "Edit Password", :class => "form-control" %>
      </div>

      <div class="input-group">
        <div class="input-group-addon"><span class="glyphicon glyphicon-usd"></span></div>
        <%= f.text_field :low_price, placeholder: "Your lowest charge per haircut?", :class => "form-control" %>
      </div>

      <div class="input-group">
        <div class="input-group-addon"><span class="glyphicon glyphicon-usd "></span></div>
        <%= f.text_field :high_price, placeholder: "Your highest charge per haircut?", :class => "form-control" %>
      </div>

      <div class="input-group input-group-lg">
        <div class="input-group-addon"><span class="glyphicon glyphicon-pencil"></span></div>
        <%= f.text_area :bio, placeholder: "Add Swaggy bio...", class: "form-control" %>
      </div>

        <div class="form-group">
  <%= f.file_field :avatar %><br />
  </div>
  <div class="form-group">
  Current City: <%= f.text_field :zipcode, placeholder: "City, State", class: 'form-control' %>
  </div>
 
    </div>

    <%= f.submit "Update", class: 'btn btn-primary btn lg btn-block' %>
    <% end %>
  </div>

</div>
</div>
</div>
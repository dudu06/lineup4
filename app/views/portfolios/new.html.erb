<h1>Cut Some Hair!</h1><br>

<div class="col-sm-4 col-sm-offset-4">
	<%= form_for [@barber, @portfolio] do |f| %> 


	<div class="form-group">
	<%= f.text_field :title, placeholder: "Picture Title", class: 'form-control' %><br />
	</div>
	
	<div class="form-group">
	<%= f.text_field :description, placeholder: "Picture Description", class: 'form-control' %><br />
	</div>

	<div class="form-group">
	<%= f.file_field :photo %><br />
	</div>
	
	<%= f.submit "Submit", class: 'btn btn-primary'%>

	<% end %>


</div>
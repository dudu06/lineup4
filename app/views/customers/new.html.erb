<div id="gutter" class="white-bg">
		<div class="spacer"></div>

	<div id="sign-up-container" class="customer-signup">
		<h1>CUSTOMER SIGN UP</h1><br>
		<%= form_for @customers, html: { class: "directUpload" } do |f| %> 
		<div class="form-group">
			<%= f.text_field :email, placeholder: "E-Mail", class: 'txt-box' %>
		</div>
		<div class="form-group">
			<%= f.text_field :name, placeholder: "Name", class: 'txt-box' %>
		</div>
		<div class="form-group">
			<%= f.text_field :zipcode, placeholder: "zipcode", class: 'txt-box' %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, placeholder: "Password", class: 'txt-box' %>
		</div>
		<div class="form-group">
			<%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'txt-box' %>
		</div>
		<div class="form-group">
			<%= f.file_field :avatar %>
		</div>

		<%= f.submit "Sign Up", class: 'btn btn-primary'%>

		<% end %>
	</div>


</div>
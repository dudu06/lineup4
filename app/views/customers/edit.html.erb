<h1>EDIT CUSTOMER!</h1><br>

<div class="col-sm-4 col-sm-offset-4">
	<%= form_for @customer, html: { class: "directUpload" } do |f| %> 


	<div class="form-group">
	<%= f.text_field :email, placeholder: "E-Mail", class: 'form-control' %><br />
	</div>
	
	<div class="form-group">
	<%= f.text_field :name, placeholder: "Name", class: 'form-control' %><br />
	</div>

	<div class="form-group">
	<%= f.text_field :zipcode, placeholder: "City, State", class: 'form-control' %><br />
	</div>


	<div class="form-group">
	<%= f.text_field :bio, placeholder: "Bio", class: 'form-control' %><br />
	</div>

	<div class="form-group">
	<%= f.text_field :zipcode, placeholder: "zipcode", class: 'form-control' %><br />
	</div>

	<div class="form-group">
	<%= f.file_field :avatar, placeholder: "City, State", class: 'form-control' %><br />
	</div>

	
	<%= f.submit "Submit", class: 'btn btn-primary'%>

	<% end %>


</div>